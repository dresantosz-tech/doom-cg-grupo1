{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DoomLike (g++ MSYS2)",
            "type": "process",
            "command": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "$ErrorActionPreference='Stop'; New-Item -ItemType Directory -Force -Path build | Out-Null; $src = Get-ChildItem -Path src -Recurse -Filter *.cpp | ForEach-Object { $_.FullName }; $all = @($src + (Join-Path $PWD 'main.cpp')); & 'C:/msys64/mingw64/bin/g++.exe' -g -O0 -Wall -Wextra -Iinclude @all -o build/DoomLike.exe -lglew32 -lfreeglut -lopengl32 -lglu32 -lopenal; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; Copy-Item -Recurse -Force assets build/; Copy-Item -Recurse -Force maps build/; Copy-Item -Recurse -Force shaders build/; if (Test-Path 'C:/msys64/mingw64/bin/libopenal-1.dll') { Copy-Item -Force 'C:/msys64/mingw64/bin/libopenal-1.dll' build/ }; if (Test-Path 'C:/msys64/mingw64/bin/OpenAL32.dll') { Copy-Item -Force 'C:/msys64/mingw64/bin/OpenAL32.dll' build/ }"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Iinclude",
                "src/core/app.cpp",
                "src/core/camera.cpp",
                "src/core/fps.cpp",
                "src/core/game.cpp",
                "src/core/window.cpp",
                "src/graphics/drawlevel.cpp",
                "src/graphics/shader.cpp",
                "src/graphics/texture.cpp",
                "src/input/input.cpp",
                "src/input/keystate.cpp",
                "src/level/level.cpp",
                "src/level/levelmetrics.cpp",
                "src/level/maploader.cpp",
                "src/utils/assets.cpp",
                "src/utils/utils.cpp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGLEW",
                // "-lGL",
                // "-lGLU",
                "-lopenal",
                //"-lglut",
                "-lglew32",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}

